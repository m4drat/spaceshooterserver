<?xml version="1.0" encoding="UTF-8"?>
<project name="module_spaceshooterserver" default="compile.module.spaceshooterserver">
  <dirname property="module.spaceshooterserver.basedir" file="${ant.file.module_spaceshooterserver}"/>
  
  <property name="module.jdk.home.spaceshooterserver" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.spaceshooterserver" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.spaceshooterserver" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.spaceshooterserver" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="spaceshooterserver.output.dir" value="${module.spaceshooterserver.basedir}/../../out/production/spaceshooterserver"/>
  <property name="spaceshooterserver.testoutput.dir" value="${module.spaceshooterserver.basedir}/../../out/test/spaceshooterserver"/>
  
  <path id="spaceshooterserver.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="spaceshooterserver.module.production.classpath">
    <path refid="${module.jdk.classpath.spaceshooterserver}"/>
  </path>
  
  <path id="spaceshooterserver.runtime.production.module.classpath">
    <pathelement location="${spaceshooterserver.output.dir}"/>
  </path>
  
  <path id="spaceshooterserver.module.classpath">
    <path refid="${module.jdk.classpath.spaceshooterserver}"/>
    <pathelement location="${spaceshooterserver.output.dir}"/>
  </path>
  
  <path id="spaceshooterserver.runtime.module.classpath">
    <pathelement location="${spaceshooterserver.testoutput.dir}"/>
    <pathelement location="${spaceshooterserver.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.spaceshooterserver">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.spaceshooterserver">
    <patternset refid="excluded.from.module.spaceshooterserver"/>
  </patternset>
  
  
  <target name="compile.module.spaceshooterserver" depends="compile.module.spaceshooterserver.production,compile.module.spaceshooterserver.tests" description="Compile module spaceshooterserver"/>
  
  <target name="compile.module.spaceshooterserver.production" depends="register.custom.compilers" description="Compile module spaceshooterserver; production classes"/>
  
  <target name="compile.module.spaceshooterserver.tests" depends="register.custom.compilers,compile.module.spaceshooterserver.production" description="compile module spaceshooterserver; test classes" unless="skip.tests"/>
  
  <target name="clean.module.spaceshooterserver" description="cleanup module">
    <delete dir="${spaceshooterserver.output.dir}"/>
    <delete dir="${spaceshooterserver.testoutput.dir}"/>
  </target>
</project>